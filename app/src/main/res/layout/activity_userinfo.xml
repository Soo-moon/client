<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative">


    <Button
        android:id="@+id/button"
        android:background="@drawable/profilebtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="userinfo_profilebtn"
        android:layout_below="@+id/userinfo_imageView"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/mapo"
/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exitbtn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="userinfo_exit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/userinfo_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:onClick="userinfo_profileimage"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/userinfo_imageView"
        android:layout_alignTop="@id/userinfo_imageView"
        android:layout_alignRight="@id/userinfo_imageView"
        android:layout_alignBottom="@id/userinfo_imageView"
        android:layout_margin="1dp"
        android:gravity="center"
        android:fontFamily="@font/mapo"
        android:text="프로필 사진 변경"
        android:background="@drawable/border"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/userinfo_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/mapo"
        android:text="내 소개" />

    <TextView
        android:id="@+id/userinfo_textview1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/userinfo_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:background="@drawable/border"
        android:cursorVisible="true"
        android:ems="10"
        android:fontFamily="@font/mapo"
        android:gravity="left"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textSize="20dp"
        android:visibility="visible" />


    <EditText
        android:id="@+id/userinfo_edittext"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/userinfo_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/border"
        android:cursorVisible="true"
        android:ems="10"
        android:fontFamily="@font/mapo"
        android:gravity="left"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textSize="20dp" />

    <Button
        android:id="@+id/userinfo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userinfo_edittext"
        android:layout_centerHorizontal="true"
        android:onClick="userinfo_edittextbtn"
        android:fontFamily="@font/mapo"
        android:background="@drawable/edit"
        />


    <ListView
        android:id="@+id/userinfo_listview"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>