<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="userinfo_profilebtn"
        android:layout_below="@+id/userinfo_imageView"
        android:layout_marginLeft="20dp"
        android:text="프로필 사진 변경" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나가기"
        android:onClick="userinfo_exit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/userinfo_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="userinfo_profileimage"
        app:srcCompat="@drawable/border" />

    <TextView
        android:id="@+id/userinfo_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="내 소개" />

    <EditText
        android:id="@+id/userinfo_edittext"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/userinfo_textview"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:gravity="left"
        android:cursorVisible="true"
        android:ems="10"
        android:inputType="textMultiLine|textNoSuggestions">

    </EditText>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>